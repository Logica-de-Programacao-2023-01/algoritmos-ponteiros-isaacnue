package main

import "fmt"

func main() {
	primeirosPrimos := make([]int, 0)
	n := 5
	preencherPrimos(&primeirosPrimos, n)
	fmt.Println("NÃºmeros primos:", primeirosPrimos)
}

func preencherPrimos(ptr *[]int, n int) {
	isPrimo := func(num int) bool {
		if num < 2 {
			return false
		}
		for i := 2; i*i <= num; i++ {
			if num%i == 0 {
				return false
			}
		}
		return true
	}

	count := 0
	num := 2
	for count < n {
		if isPrimo(num) {
			*ptr = append(*ptr, num)
			count++
		}
		num++
	}
}
